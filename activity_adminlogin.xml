<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"

    android:background="#FFB6C1"

    tools:context="com.lawaware.lawawareapp.Adminlogin"
android:orientation="vertical" >

<Button
    android:id="@+id/button3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginTop="42dp"
    android:background="@drawable/btn_login_reg_design"
    android:text="HOME"
    android:textStyle="italic"
    tools:ignore="HardcodedText"
    android:layout_below="@+id/button1"
    android:layout_alignLeft="@+id/button1"
    android:layout_alignStart="@+id/button1"
    android:layout_alignRight="@+id/editText2"
    android:layout_alignEnd="@+id/editText2" />

    <EditText
    android:id="@+id/editText2"
    android:fontFamily="monospace"
    android:textSize="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/editText1"
    android:layout_below="@+id/editText1"
    android:layout_marginTop="17dp"
    android:ems="10"
    android:hint="Admin Password"
    android:inputType="textPassword"
    tools:ignore="HardcodedText,RtlHardcoded" />

<Button
    android:id="@+id/button1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_login_reg_design"


    android:text="LOGIN"
    android:textStyle="italic"
    tools:ignore="HardcodedText"
    android:layout_centerVertical="true"
    android:layout_alignLeft="@+id/editText2"
    android:layout_alignStart="@+id/editText2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/btn_login_reg_design"
        android:text="CANCEL"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_above="@+id/button3"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <EditText
    android:id="@+id/editText1"
        android:fontFamily="monospace"
        android:textSize="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="48dp"

    android:ems="10"
    android:hint="admin User Name"
    tools:ignore="HardcodedText"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="34dp"

        android:text="Login Process"

        android:textSize="24sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText,UnknownIdInLayout"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignStart="@+id/editText1"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

</RelativeLayout>



